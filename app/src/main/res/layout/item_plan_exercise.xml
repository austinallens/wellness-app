<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#1E1E1E"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Drag Handle -->
        <ImageView
            android:id="@+id/imageDragHandle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Drag to reorder"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:tint="#808080"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textExerciseName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Push-ups"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/buttonDelete"
            app:layout_constraintStart_toEndOf="@id/imageDragHandle"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/category_badge_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:text="Workout"
            android:textColor="#BB86FC"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/imageDragHandle"
            app:layout_constraintTop_toBottomOf="@id/textExerciseName" />

        <TextView
            android:id="@+id/textExerciseDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="3 sets Ã— 10 reps"
            android:textColor="#B3B3B3"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/textCategory"
            app:layout_constraintStart_toEndOf="@id/textCategory"
            app:layout_constraintTop_toTopOf="@id/textCategory" />

        <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Remove exercise"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="#F44336"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>